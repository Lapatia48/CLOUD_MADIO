{
  "version": 8,
  "name": "Antananarivo Basic",
  "sources": {
    "antananarivo": {
      "type": "vector",
      "url": "mbtiles://{antananarivo}"
    }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#e8e4e0"
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#f0ece8"
      }
    },
    {
      "id": "landuse-park",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "landuse",
      "filter": ["==", "class", "park"],
      "paint": {
        "fill-color": "#c8e6c8"
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "park",
      "paint": {
        "fill-color": "#c8e6c8"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a0c8f0",
        "line-width": 1
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-outline-color": "#b0a090"
      }
    },
    {
      "id": "road-service",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["==", "class", "service"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 1
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "tertiary"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["==", "class", "secondary"],
      "paint": {
        "line-color": "#f7fabf",
        "line-width": 3
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["==", "class", "primary"],
      "paint": {
        "line-color": "#fcd6a4",
        "line-width": 4
      }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["==", "class", "trunk"],
      "paint": {
        "line-color": "#f9b29c",
        "line-width": 5
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["==", "class", "motorway"],
      "paint": {
        "line-color": "#e892a2",
        "line-width": 6
      }
    },
    {
      "id": "aeroway-runway",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "aeroway",
      "filter": ["==", "class", "runway"],
      "paint": {
        "line-color": "#bdbdbd",
        "line-width": 10
      }
    },
    {
      "id": "water-name",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "water_name",
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#5d9ad3",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-village",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "filter": ["==", "class", "village"],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "filter": ["==", "class", "town"],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 13
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 16
      },
      "paint": {
        "text-color": "#111111",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-suburb",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "filter": ["==", "class", "suburb"],
      "minzoom": 12,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-neighbourhood",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "filter": ["==", "class", "neighbourhood"],
      "minzoom": 14,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "poi-label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "poi",
      "minzoom": 15,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "text-anchor": "top",
        "text-offset": [0, 0.5]
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "aerodrome-label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "aerodrome_label",
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#6d6d6d",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
